{
  "name": "aica",
  "version": "1.0.0",
  "description": "クライアントデータの表示・更新を行うElectronアプリケーション",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64"
  },

  "author": "Daiju Fujita",
  "license": "proprietary",
  "build": {
    "appId": "com.robo-aica.aica",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@xmldom/xmldom": "^0.8.4",
    "axios": "^1.7.7",
    "form-data": "^4.0.0",
    "node-qpdf2": "^6.0.0",
    "pdf-lib": "^1.17.1",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "electron": "^36.7.3",
    "electron-builder": "^25.1.8"
  },
  "keywords": [
    "electron",
    "client-data",
    "xml"
  ]
}
