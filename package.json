{
  "name": "aica",
  "version": "1.0.0",
  "description": "クライアントデータの表示・更新を行うElectronアプリケーション",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:azure": "cross-env SPEECH_SERVICE=Azure electron .",
    "start:azure:dev": "cross-env SPEECH_SERVICE=Azure NODE_ENV=development electron . -- --devtools",
    "start:aws": "cross-env SPEECH_SERVICE=AWS electron .",
    "start:amivoice": "cross-env SPEECH_SERVICE=AmiVoice electron .",
    "dist:win:x64": "electron-builder --win nsis --x64",
    "dist:win:arm64": "electron-builder --win nsis --arm64"
  },
  "author": "Daiju Fujita",
  "license": "proprietary",
  "build": {
    "appId": "com.robo-aica.aica",
    "productName": "AICA Client",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "speech-recognition/",
        "to": "speech-recognition/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@xmldom/xmldom": "^0.8.4",
    "axios": "^1.7.7",
    "form-data": "^4.0.0",
    "node-qpdf2": "^6.0.0",
    "pdf-lib": "^1.17.1",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.7.3",
    "electron-builder": "^25.1.8"
  },
  "keywords": [
    "electron",
    "client-data",
    "xml"
  ]
}
